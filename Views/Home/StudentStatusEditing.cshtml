@{
    ViewData["Title"] = "Student Profile Editing";
}

@model AttendanceMonitoringSystem.Models.StudentProfile

<div class="text-center">
    <h1 class="display-4">Student Profile</h1>
    <h3>@ViewBag.StudentName</h3>
</div>

<form asp-action="SaveStudentProfile" method="post">
    <input type="hidden" asp-for="StudentId" />
    <div class="form-group">
        <label>Student Name</label>
        <input class="form-control" name="StudentName" value="@ViewBag.StudentName" />
    </div>


    <div class="form-group">
        <label>Age</label>
        <input class="form-control" asp-for="Age" type="number" min="0" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <textarea class="form-control" asp-for="Address" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>
